<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AuroraControls.TestApp.ChipGroupPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:aurora="http://auroracontrols.maui/controls"
             Title="ChipGroup Test Page">

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="ChipGroup Control Test"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Basic ChipGroup -->
            <StackLayout>
                <Label Text="Basic ChipGroup (Multi-Selection)" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="BasicChipGroup"
                                  Spacing="8"
                                  ChipTapped="OnChipTapped">
                    <aurora:Chip Text="Option 1" Value="option1" />
                    <aurora:Chip Text="Option 2" Value="option2" />
                    <aurora:Chip Text="Option 3" Value="option3" />
                    <aurora:Chip Text="Option 4" Value="option4" />
                    <aurora:Chip Text="Option 5" Value="option5" />
                </aurora:ChipGroup>
                <Label x:Name="BasicSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- Single Selection ChipGroup -->
            <StackLayout>
                <Label Text="Single Selection ChipGroup" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="SingleSelectionChipGroup"
                                  IsSingleSelection="True"
                                  Spacing="8"
                                  ChipTapped="OnSingleSelectionChipTapped">
                    <aurora:Chip Text="Red" Value="red" BackgroundColor="#FFE5E5" ToggledBackgroundColor="#FFB3B3" />
                    <aurora:Chip Text="Blue" Value="blue" BackgroundColor="#E5F0FF" ToggledBackgroundColor="#B3D9FF" />
                    <aurora:Chip Text="Green" Value="green" BackgroundColor="#E5FFE5" ToggledBackgroundColor="#B3FFB3" />
                    <aurora:Chip Text="Yellow" Value="yellow" BackgroundColor="#FFFFE5" ToggledBackgroundColor="#FFFFB3" />
                </aurora:ChipGroup>
                <Label x:Name="SingleSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- Scrollable ChipGroup -->
            <StackLayout>
                <Label Text="Scrollable ChipGroup (Horizontal Scroll)" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="ScrollableChipGroup"
                                  Scrollable="True"
                                  Spacing="8"
                                  HeightRequest="50"
                                  ChipTapped="OnScrollableChipTapped">
                    <aurora:Chip Text="Item 1" Value="1" />
                    <aurora:Chip Text="Item 2" Value="2" />
                    <aurora:Chip Text="Item 3" Value="3" />
                    <aurora:Chip Text="Item 4" Value="4" />
                    <aurora:Chip Text="Item 5" Value="5" />
                    <aurora:Chip Text="Item 6" Value="6" />
                    <aurora:Chip Text="Item 7" Value="7" />
                    <aurora:Chip Text="Item 8" Value="8" />
                    <aurora:Chip Text="Item 9" Value="9" />
                    <aurora:Chip Text="Item 10" Value="10" />
                    <aurora:Chip Text="Very Long Item Name 11" Value="11" />
                    <aurora:Chip Text="Very Long Item Name 12" Value="12" />
                </aurora:ChipGroup>
                <Label x:Name="ScrollableSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- ChipGroup with Max Rows -->
            <StackLayout>
                <Label Text="ChipGroup with Max Rows (2 rows max)" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="MaxRowsChipGroup"
                                  MaxRowsBeforeOverflow="2"
                                  Spacing="8"
                                  ChipTapped="OnMaxRowsChipTapped">
                    <aurora:Chip Text="Row 1 - Item 1" Value="r1i1" />
                    <aurora:Chip Text="Row 1 - Item 2" Value="r1i2" />
                    <aurora:Chip Text="Row 1 - Item 3" Value="r1i3" />
                    <aurora:Chip Text="Row 2 - Item 1" Value="r2i1" />
                    <aurora:Chip Text="Row 2 - Item 2" Value="r2i2" />
                    <aurora:Chip Text="Should be hidden 1" Value="hidden1" />
                    <aurora:Chip Text="Should be hidden 2" Value="hidden2" />
                </aurora:ChipGroup>
                <Label x:Name="MaxRowsLabel" Text="Overflow Status: No" FontSize="12" TextColor="Gray" />
                <Label x:Name="MaxRowsSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- Removable Chips -->
            <StackLayout>
                <Label Text="ChipGroup with Removable Chips" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="RemovableChipGroup"
                                  Spacing="8"
                                  ChipTapped="OnRemovableChipTapped">
                    <aurora:Chip Text="Removable 1" Value="rem1" IsRemovable="True" />
                    <aurora:Chip Text="Removable 2" Value="rem2" IsRemovable="True" />
                    <aurora:Chip Text="Removable 3" Value="rem3" IsRemovable="True" />
                    <aurora:Chip Text="Not Removable" Value="fixed" IsRemovable="False" />
                </aurora:ChipGroup>
                <Label x:Name="RemovableSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- Custom Styled Chips -->
            <StackLayout>
                <Label Text="Custom Styled ChipGroup" FontAttributes="Bold" />
                <aurora:ChipGroup x:Name="StyledChipGroup"
                                  Spacing="12"
                                  ChipTapped="OnStyledChipTapped">
                    <aurora:Chip Text="Primary"
                                 Value="primary"
                                 BackgroundColor="#007ACC"
                                 ToggledBackgroundColor="#005A9B"
                                 TextColor="White"
                                 BorderColor="#005A9B"
                                 CornerRadius="20" />
                    <aurora:Chip Text="Secondary"
                                 Value="secondary"
                                 BackgroundColor="#6C757D"
                                 ToggledBackgroundColor="#5A6268"
                                 TextColor="White"
                                 BorderColor="#5A6268"
                                 CornerRadius="20" />
                    <aurora:Chip Text="Success"
                                 Value="success"
                                 BackgroundColor="#28A745"
                                 ToggledBackgroundColor="#1E7E34"
                                 TextColor="White"
                                 BorderColor="#1E7E34"
                                 CornerRadius="20" />
                </aurora:ChipGroup>
                <Label x:Name="StyledSelectionLabel" Text="Selected: None" FontSize="12" TextColor="Gray" />
            </StackLayout>

            <!-- Control Buttons -->
            <StackLayout>
                <Label Text="Control Actions" FontAttributes="Bold" />

                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                    <!-- Scrollable ChipGroup Controls -->
                    <Button Grid.Row="0" Grid.Column="0"
                            Text="Scroll to Start"
                            Clicked="OnScrollToStartClicked" />
                    <Button Grid.Row="0" Grid.Column="1"
                            Text="Scroll to End"
                            Clicked="OnScrollToEndClicked" />

                    <!-- Selection Controls -->
                    <Button Grid.Row="1" Grid.Column="0"
                            Text="Select First 3 (Basic)"
                            Clicked="OnSelectFirstThreeClicked" />
                    <Button Grid.Row="1" Grid.Column="1"
                            Text="Clear All Selections"
                            Clicked="OnClearSelectionsClicked" />

                    <!-- Dynamic Chip Management -->
                    <Button Grid.Row="2" Grid.Column="0"
                            Text="Add Dynamic Chip"
                            Clicked="OnAddDynamicChipClicked" />
                    <Button Grid.Row="2" Grid.Column="1"
                            Text="Remove Last Chip"
                            Clicked="OnRemoveLastChipClicked" />

                    <!-- Advanced Features -->
                    <Button Grid.Row="3" Grid.Column="0"
                            Text="Toggle Scrollable"
                            Clicked="OnToggleScrollableClicked" />
                    <Button Grid.Row="3" Grid.Column="1"
                            Text="Toggle Selection Mode"
                            Clicked="OnToggleSelectionModeClicked" />

                </Grid>
            </StackLayout>

            <!-- Status Display -->
            <StackLayout>
                <Label Text="Status Information" FontAttributes="Bold" />
                <Label x:Name="StatusLabel"
                       Text="Ready"
                       FontSize="12"
                       TextColor="DarkBlue"
                       BackgroundColor="LightBlue"
                       Padding="10" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>

