<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AuroraControls.TestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AuroraControls.TestApp"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" Icon="home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Signature Pad" Icon="edit">
        <ShellContent
            Title="Signature Pad"
            ContentTemplate="{DataTemplate local:SignaturePadPage}"
            Route="SignaturePadPage" />
    </FlyoutItem>

</Shell>

