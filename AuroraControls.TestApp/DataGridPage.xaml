<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AuroraControls.TestApp"
             xmlns:aurora="http://auroracontrols.maui/controls"
             x:Class="AuroraControls.TestApp.DataGridPage">

    <Grid RowDefinitions="Auto,*">
        <StackLayout Grid.Row="0" Orientation="Horizontal" Padding="10" HorizontalOptions="FillAndExpand">
            <Label Text="Aurora Data Grid Sample"
                   FontSize="24"
                   HorizontalOptions="StartAndExpand"
                   VerticalOptions="Center" />

            <Button x:Name="UpdateButton"
                    Text="Update Data"
                    Clicked="UpdateButton_Clicked"
                    HorizontalOptions="End"
                    VerticalOptions="Center"
                    Margin="5" />
        </StackLayout>

        <aurora:AuroraDataGrid
            Grid.Row="1"
            x:Name="DataGrid"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand" />
    </Grid>
</ContentPage>
