<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:aurora="http://auroracontrols.maui/controls"
             xmlns:viewmodels="clr-namespace:AuroraControls.TestApp.ViewModels"
             x:Class="AuroraControls.TestApp.DataGridSamplePage"
             Title="DataGrid Sample">

    <ContentPage.BindingContext>
        <viewmodels:DataGridSampleViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*" Padding="10">
        <Label Text="Employee Records"
               FontSize="24"
               HorizontalTextAlignment="Center"
               Margin="0,0,0,10"/>

        <aurora:DataGrid Grid.Row="1"
                        ItemsSource="{Binding People}"
                        RowHeight="40"
                        HeaderRowHeight="45">
            <aurora:DataGrid.Columns>
                <aurora:TextColumn PropertyPath="Name"
                                HeaderText="Name"
                                AutoSize="True"/>

                <aurora:NumericColumn PropertyPath="Age"
                                   HeaderText="Age"
                                   Width="80"
                                   FormatString="N0"/>

                <aurora:DateTimeColumn PropertyPath="DateOfBirth"
                                    HeaderText="Birth Date"
                                    AutoSize="True"
                                    FormatString="d"/>

                <aurora:NumericColumn PropertyPath="Salary"
                                   HeaderText="Salary"
                                   Width="120"
                                   FormatString="C2"/>

                <aurora:BooleanColumn PropertyPath="IsActive"
                                   HeaderText="Active"
                                   Width="80"
                                   CheckboxSize="16"
                                   CheckboxColor="{StaticResource Primary}"/>
            </aurora:DataGrid.Columns>
        </aurora:DataGrid>
    </Grid>
</ContentPage>
